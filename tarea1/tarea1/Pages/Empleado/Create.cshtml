@page
@model tarea1.Pages.Empleado.CreateModel
@{
}
<br>
<h2> Crear nuevo empleado </h2>

@if(Model.flag == false)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.message</strong>
    </div>
}

<form method="POST">
    <div class="row nb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombre" value="@Model.info.Nombre">
        </div>
    </div>
    <div class="row nb-3">
        <label class="col-sm-3 col-form-label">Salario</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="salario" value="@Model.info.Salario">
        </div>
    </div>

    @if (Model.flag == true)
    {
        <div class="row nb-3">
            <div class="col-sm-9">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>@Model.message</strong>
                    <button type="button" class="btn-close" data-backdrop="alert" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
    }

    <div class ="row nb-3">
        <div class="offset-sm-3 col-sm3 d-grid">
            <button type ="submit" class="btn btn-primary">Crear empleado</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class ="btn btn-outline-primary" href="/Empleado/Index" role="button">Cancelar</a>
        </div>
    </div>
</form>